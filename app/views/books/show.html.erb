<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'shares/userinfo', user: @book.user %>
      <h2>New book</h2>
      <%= render 'shares/listnewbook', book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <p>
                <%= link_to (attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"), user_path(@book.user.id) %>
              </p>
              <p><%= link_to @book.user.name, user_path(@book.user.id) %></p>
            </td>
            <td>
              <%= link_to @book.title, book_path(@book.id) %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @book.user.id == current_user.id %>
            <td>
              <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %>
            </td>
            <td>
              <a class="btn btn-sm btn-danger">
              <%= link_to 'Destroy', book_path(@book), method: :delete, data: {confirm: "削除しますか？"} %>
              </a>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>