<h1>Book detail</h1>

<table>
  <tbody>
    <tr>
      <td>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
        <%= @book.user.name %>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
      <td>
        <%= link_to "Edit", edit_book_path(@book) %>
      </td>
      <td>
        <%= link_to "Destroy", book_path(@book), method: :delete %>
      </td>
      <% end %>
    </tr>
  </tbody>
</table>
