<% unless user == current_user %>
  <% if current_user.following?(user) %>
    <%= link_to 'フォローをやめる', unfollow_path(user.id), method: :POST, class: "btn btn-outline-secondary" %>
  <% else %>
    <%= link_to 'フォローする', follow_path(user.id), method: :POST, class: "btn btn-outline-secondary" %>
  <% end %>
<% end %>