<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'shares/userinfo' , user: @user %>
      <h2>New book</h2>
      <%= render 'shares/listnewbook', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= "フォロー数:#{user.follower.count}" %>
            </td>
            <td>
              <%= "フォロワー数:#{user.followed.count}" %>
            </td>
            <td>
              <%= render 'shares/follow_button', user: user %>
            </td>
            <td>
              <%= link_to "Show", user_path(user.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

